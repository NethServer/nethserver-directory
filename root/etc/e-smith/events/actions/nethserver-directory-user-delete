use strict;

my $event = shift;
my $userName = shift;;

#------------------------------------------------------------
# Delete the Unix account.
#------------------------------------------------------------

die "Username argument missing." unless defined ($userName);

# Handle users with and without domain part
if ($userName =~ /@/) {
    $userName = (split(/@/,$userName))[0];
}

my ($name,$passwd,$uid,$gid, $quota,$comment,$gcos,$home,$shell,$expire) = getpwnam($userName);

my $opt = "";
if ( -d $home ) {
   # remove home directory if exists
   $opt = "-r";
}
my $discard = `/usr/sbin/luserdel $opt '$userName'`;
if ($? != 0)
{
    die "Failed to delete account $userName.\n";
}

exit (0);
